<%= form_for @donator do |f| %>

	<%= f.label :Name %> : <%= @donator.name %> <br />
	
	<%= f.label :Alamat %> <br />
	<%= f.text_area :address %><br />
	<%= f.label :Telepon %><br />
	<%= f.text_field :phone %> <br />
	<%= f.label :Email %><br />
	<%= f.text_field :email %> <br />
	<%= f.label :'Jenis Kelamin' %><br />
	<%= f.radio_button :gender, :L%> Laki-Laki
	<%= f.radio_button :gender, :P%> Perempuan <br />
	<%= f.label :Pekerjaan %><br />
	<%= f.text_field :job %> <br />


<% end %>